<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>operators</servlet-name>
        <servlet-class>controller.operatorController.OperatorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>operators</servlet-name>
        <url-pattern>/operators</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createOperator</servlet-name>
        <servlet-class>controller.operatorController.CreateOperatorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createOperator</servlet-name>
        <url-pattern>/operators/createOperator</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>changeRole</servlet-name>
        <servlet-class>controller.operatorController.ChangeRoleOperator</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>changeRole</servlet-name>
        <url-pattern>/operators/changeRole</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>controller.loginController.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>controller.registration.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>dashBoard</servlet-name>
        <servlet-class>controller.DashBoardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dashBoard</servlet-name>
        <url-pattern>/inner/dashBoard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>category</servlet-name>
        <servlet-class>controller.documentFeatureManagerController.CategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>category</servlet-name>
        <url-pattern>/category</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>createCategory</servlet-name>
        <servlet-class>controller.documentFeatureManagerController.CreateCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createCategory</servlet-name>
        <url-pattern>/category/createCategory</url-pattern>
    </servlet-mapping>


</web-app>
